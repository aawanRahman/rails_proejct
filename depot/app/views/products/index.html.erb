



<p id="notice"><%= notice %></p>
<h1>Products</h1>
<table class: "table table-striped">
  <% @products.each do |product| %>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
      <td>
        <%= image_tag(product.image_url, class: 'list_image') %>
      </td>
      <td class="list_description">
        <dl>
          <dt><%= product.title %></dt>
          <dd><%= truncate(strip_tags(product.description),
            length: 80) %></dd>
          </dl>
        </td>
        <td class="list_actions">
          <button type="button" class="btn btn-dark"> <%= link_to 'Show', product %> <br/> </button>
          <button type="button" class="btn btn-dark"> <%= link_to 'Edit', edit_product_path(product) %><br/> </button>

          <button type="button" class="btn btn-dark"> <%= link_to 'Destroy', product, method: :delete,
          data: { confirm: 'Are you sure?' } %> </button><br/>

        </td>
    </tr>
  <% end %>
</table>
<br />

<button type="button" class="btn btn-dark"><%= link_to 'New product',  new_product_path %>   </button>
